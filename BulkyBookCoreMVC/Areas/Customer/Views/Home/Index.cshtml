@model IEnumerable<Product>



<div class="row pb-3" style="border:0px solid">

    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6" style="border:0px solid">
            <div class="row p-2" style="border:0px solid">

                <div class="col-12 p-1" style="border:0px solid #008cba;border-radius:5px;">

                    <div class="card" >
                        <img src="@product.ImageURL" alt="book cover" class="card-img-top rounded"  />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">by <b>@product.Author</b></p>

                            </div>
                            <div class="pl-0">

                                Price:<b>@product.Price</b><br>
                                Category: @product.CategoryName

                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                                Details
                            </a>
                        </div>
                    </div>
                    
                </div>
                 

            </div>

        </div>

    }

</div>

